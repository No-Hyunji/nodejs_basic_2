extends layout

block content
  style.
    section.todo_main{
      border:1px solid green;
      width:50%;
      margin:30px auto;
      box-shadow:10px 10px 5px 0px rgba(0,0,0,0.7);
    }

    section.todo_main h1{
      margin:0 auto;
      background-color:green;
      text-align:center;
      padding:2rem;
    }

    section.todo_main form{
      display:flex;
    }

    section.todo_main form input{
      display:inline-block;
      flex:5;
      margin:3px;
      border-radius:5px;
      border:1px solid #ddd;
    }

    section.todo_main form button{
      flex:1;
      background-color:blue;
      color:white;
      padding:5px 12px;
      margin:3px;
      border-radius:5px;
      border:none;
      outline:none;
      cursor:pointer;
    }

    section.todo_main form button:hover{
      box-shadow : 10px 10px 25px 0px rgba(0,0,0,0.7);
    }

    article.todo_list{
      border:1px solid #aaa;
    }

    article.todo_list ul li{
      width:90%;
      padding:8px;
      border-bottom : 1px solid green;
    }

  section.todo_main
    h1 MY TODO LIST
    form(method="POST")
      input(type="text",name="todo",placeholder="하고싶은 일")
      button 저장 

    article.todo_list
      ul
        li 온라인 수업
        li ToDo List 만들기
        li 오늘의 과제
        li 내일은 금욜
        li 다음주면 땡이길 
